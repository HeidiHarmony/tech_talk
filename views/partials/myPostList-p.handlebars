<p>my posts partial</p>
<ul id="show-all-posts">
  {{#each posts as |post| }}
    <li class="pb-2">
      <a href="api/post/{{post.id}}" class="post-link">
        <h3 class="is-size-3">{{post.title}}</h3>
        <p>Status: {{ post.status }} {{#if post.status == "published"}} Published: {{ post.date_published }} {{/if}} </p>
        <p>Created: {{ post.date_created }} {{#if post.date_modified}} Updated: {{ post.date_modified }} {{/if}}</p>
      </a>
    </li>
  {{/each}}
</ul>