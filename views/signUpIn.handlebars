<div class="columns my-5">

  <!-- Sign in form -->

  <div id="hello" class="column is-one-quarter has-background-dark p-5 mr-5">
     <h2 class="is-size-3 mae-semi has-text-info-light">Sign In</h2>
      <form id="signin-form" class="form" action="/signin" method="POST">
        <div class="form-group">
          <label for="email-signin">Email</label><br>
          <input class="form-input" type="text" id="email-signin" />
        </div>
        <div class="form-group">
          <label for="password-signin">Password</label><br>
          <input class="form-input" type="password" id="password-signin" />
        </div>
        <div class="form-group">
          <button id="signinUser" class="button is-primary" type="submit">Sign In</button>
        </div>
      </form>
  </div>

  
  <!-- Sign up form -->

  <div id="signupdiv" class="column is-three-quarters p-5 mr-5">

    <h2 class="is-size-3 mae-bold has-text-info-light">Sign up to read, write, and comment!</h2>

    <form id="signup-form" class="form" action="/signup" method="POST" >

      <div class="form-group">
        <label for="name-signup">Name</label><br>
        <input class="form-input" type="text" id="name-signup" />
      </div>

      <div class="form-group">
        <label for="email-signup">Email</label><br>
        <input class="form-input" type="text" id="email-signup" />
      </div>

      <div class="form-group">
        <label for="username-signup">Create a username</label><br>
        <input class="form-input" type="text" id="username-signup" />
      </div>

      <div class="form-group">
        <label for="password-signup">Password</label><br>
        <input class="form-input" type="password" id="password-signup" />
      </div>

      <div class="form-group">
        <label for="password-confirm">Confirm Password</label><br>
        <input class="form-input" type="password" id="password-confirm" />
      </div>
      <div class="form-group">
        <button id="submit-signup" class="button is-success" type="submit">Sign up</button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/js/config.js"></script>
<script type="module" src="/js/login.js"></script>

